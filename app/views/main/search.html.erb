<div class="row">
  <div class="col-6">
    <h1>products</h1>
    <% @products.each do |product| %>
      <p><%= link_to product.name, product %></p>
    <% end %>
  </div>

  <div class="col-6">
    <h1>Posts</h1>
    <% @posts.each do |post| %>
      <p><%= link_to post.title, post %></p>
    <% end %>
  </div>
</div>

