<!--Footer-->
<footer class="page-footer center-on-small-only footer-green-blue-color">
    <div class="container">
        <!--Section: Footer Form AICA-->
        <section class="section-footer">

        <!--Section heading-->
        <h3 class="section-heading h3-responsive text-xs-center dinpro-medium footer-contact"><%= t :contact_us %></h3>
        <div class="row">
            <%= form_for @contact do |f| %>
            <div class="col-md-12">
            <form>
                <!--First row-->
                <div class="row">
                    <!--First column-->
                    <div class="col-md-4">
                        <div class="md-form">
                            <%= f.text_field :name, placeholder: t('mail_mame'), required: true, id: "form-input-footer", class: "form-control form-footer dinpro-light" %>
                        </div>
                    </div>

                    <!--Second column-->
                    <div class="col-md-4">
                        <div class="md-form">
                            <%= f.email_field :email, placeholder: "Email", required: true, id: "form-input-footer", class: "form-control form-footer dinpro-light" %>
                        </div>
                    </div>

                    <!--Third column-->
                    <div class="col-md-4">
                        <div class="md-form">
                            <%= f.text_field :subject, placeholder: t('mail_subject'), required: true, id: "form-input-footer", class: "form-control form-footer dinpro-light" %>
                        </div>
                    </div>
                </div>
                <!--/.First row-->

                <!--Second row-->
                <div class="row">
                    <!--First column-->
                    <div class="col-md-12">
                        <div class="field">
                            <%= f.label t('mail_message'), class: 'dinpro-light label-textarea' %>
                            <%= f.text_area :message, as: :text, required: true, id: 'form-textarea-footer', class: 'md-textarea dinpro-light' %>
                        </div>
                        <div class="field hidden-field">
                            <%= f.text_field :nickname, hint: "Deje este campo en blanco", id: "form-input-footer", class: "form-control form-footer dinpro-light" %>
                        </div>
                    </div>
                </div>
                <!--/.Second row-->
            </form>

            <div class="text-xs-center">
                <div class="actions">
                    <%= f.submit t('send_button'), class: 'btn btn-footer-outline waves-effect dinpro-regular' %>
                </div>
            </div>
        </div>
        <% end %>
       </div>
    </section>
